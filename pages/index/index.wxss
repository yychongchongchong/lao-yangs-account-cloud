page {
  padding-bottom: 90rpx;
}
.goods_item_wrap {
  font-size: 36rpx;
}
.goods_item_wrap .intro_title {
  display: flex;
  color: #666;
  padding: 15rpx 0;
  text-align: center;
  font-size: 32rpx;
  width: 100%;
}
.goods_item_wrap .intro_title .goods_intro__num {
  flex: 2;
}
.goods_item_wrap .intro_title .goods_intro_title {
  flex: 5;
}
.goods_item_wrap .intro_title .goods_intro_nuit_price {
  flex: 2;
}
.goods_item_wrap .intro_title .goods_intro_total {
  flex: 2;
}
.goods_item_wrap .intro_title .goods_intro_price {
  flex: 2;
}
.goods_item_wrap .goods {
  text-align: center;
  display: flex;
  height: 60rpx;
  width: 100%;
  padding-top: 10rpx;
}
.goods_item_wrap .goods .goods_index {
  flex: 2;
  text-align: center;
}
.goods_item_wrap .goods .goods_name {
  flex: 5;
  font-size: 41rpx;
}
.goods_item_wrap .goods .goods_price {
  flex: 2;
  color: red;
}
.goods_item_wrap .goods .goods_change_num_tool {
  display: flex;
  flex: 2;
  justify-content: space-around;
}
.goods_item_wrap .goods .goods_change_num_tool .num_edit {
  height: 40rpx;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ccc;
  flex: 1;
}
.goods_item_wrap .goods .goods_change_num_tool .goods_num {
  flex: 2;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_item_wrap .goods .goods_all_price {
  flex: 2;
  color: red;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods_item_wrap .goods_end_all_price {
  position: fixed;
  height: 50rpx;
  background-color: red;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
